extends ../base
include mixin_manager/menuBrief

block content 
    header
        include ../partial/logo
        a(href="/manager")
            h1 UOS TABLE
        .managerbox_authenication
            a(href="/manager/edit") 가게 수정
            a(href="/logout") 로그아웃

    main.editStore
        h3 매장 정보 수정
        .editStore__restaurant 
            form(method="POST", id="editStore_form")
                input(type="text", placeholder="매장명", value=restaurant.restaurantName, required, name="restaurantName")
                input(type="text", placeholder="매장주소", value=restaurant.address, required, name="address")
                input(type="tel", placeholder="매장 번호", value=restaurant.phone, required, name="phone")
                div.editStore__restaurant__open
                    label(for="start_time") 오픈 시간
                    input(type="time", name="start_time", value=restaurant.openTime)
                div.join_form__manager__category
                    span 카테고리:
                    select(name="categoryId", form="editStore_form")
                        option(value="1") 한식
                        option(value="2") 일식
                        option(value="3") 양식
                        option(value="4") 중식
                        option(value="5") 분식
                        option(value="6") 패스트푸드
                input(type="submit", value="저장")