include mixin_main/brief_restaurant

block content 
    header 
        .nav
            if loggedIn
                a(href="/customer/mypage") Mypage
                a(href="/logout") Logout
            else        
                a(href="/login") Login
                a(href="/join") Join
            
            .search_area 
                form(action="/search",method="POST")
                    input(type="search", name="restaurantName", placeholder="매장 검색")
                    button(type="submit") 검색 
    main
        .catagory
            a(href="/") 전체
            a(href="/catagory/1") 한식
            a(href="/catagory/2") 일식
            a(href="/catagory/3") 양식
            a(href="/catagory/4") 중식
            a(href="/catagory/5") 분식
            a(href="/catagory/6") 패스트푸드

        .sort
            select(name="sort", id="sort")
                option(value="original") 기본
                option(value="stars") 별점순
                option(value="recent") 최신순
            .basket
                if loggedIn
                    a(href="/basket") 장바구니
                    

        .list_restaurant
            each restaurant in restaurants
                +brief_restaurant(restaurant)
            else 
                h3 식당이 존재하지 않습니다😢😢
